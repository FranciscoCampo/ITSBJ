<script>
function calcular() {
	var u = 0.50;
	var cho = document.getElementById("numeroChoclo").value;
	var chi = document.getElementById("numeroChicharon").value;
	 cho = parseInt(cho);
	 chi = parseInt(chi);
	 var l = cho + chi;
	var t = l * u;
	var subtotal = cho + chi;
	document.getElementById("subtotal").value = t;
	var i = t * 0.12;
	document.getElementById("iva").value = i;
	var s = i + t;
	 document.getElementById("total").value = s;

   
}

